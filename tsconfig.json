{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017"],
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "lib/",
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "sinon"
    ],
    "paths": {
      "@src/*" : ["src/*"],
      "@lib/*" : ["lib/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src"
  ]
}
