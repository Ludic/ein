{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "webworker",
      "dom",
      "esnext"
    ],
    "module": "ESNext",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "build/",
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "types": [
    "node",
    "mocha",
    "chai",
    "sinon"
  ],
  "include": [
    "src"
  ]
}
